<project name="examples-test"
         xmlns:au="antlib:org.apache.ant.antunit">

    <dirname file="${ant.file.examples-test}" property="test.dir"/>
    <import file="${test.dir}/../common/test-utils.ant"/>

    <path id="examples.dirs">
        <dirset dir="${easyant.project.dir}/example"/>
    </path>

    <!-- load antcontrib tasks, to help us iterate the examples directories -->
    <phase name="validate"/>
    <load-plugin name="antcontrib-activator" rev="0.1" as="ac"/>

    <macrodef name="clean-example">
        <attribute name="dir"/>
        <sequential>
            <delete dir="@{dir}" includeemptydirs="true">
                <include name="**/target/**"/>
                <include name="**/lib/**"/>
            </delete>
        </sequential>
    </macrodef>

    <target name="clean" depends="ac:init" description="remove stale build artifacts before / after each test">
        <for param="example">
            <path refid="examples.dirs"/>
            <sequential>
                <clean-example dir="@{example}"/>
            </sequential>
        </for>
    </target>

    <target name="setUp" depends="clean"/>
    <target name="tearDown" depends="clean"/>

    <target name="testExamples" description="verifies that default target works for each example">

        <for param="example">
            <path refid="examples.dirs"/>
            <sequential>
                <echo>Running example "@{example}"...</echo>
                <easyant dir="@{example}"/>
            </sequential>
        </for>

    </target>

</project>
