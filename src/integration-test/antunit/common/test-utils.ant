<project name="easyant-integration-test-utils">

    <description>Macros and targets to assist in writing integration test cases for EasyAnt</description>

    <dirname file="${ant.file.easyant-integration-test-utils}" property="easyant.integ.common.dir"/>
    <property name="easyant.project.dir" location="${easyant.integ.common.dir}/../../../.."/>

    <!-- include unit test utilities for loading plugins, since they will be helpful here -->
    <import file="${easyant.project.dir}/src/test/antunit/common/test-utils.ant"/>

    <macrodef name="easyant" description="fork an easyant process for testing">
        <attribute name="target" description="(optional) the easyant target(s), passed on the command line" default="" />
        <attribute name="dir" description="(optional) the base directory from which to invoke easyant" default="${basedir}" />
        <attribute name="home" description="(optional) location of easyant home directory" default="${easyant.project.dir}/target/dist" />
        <attribute name="args" description="(optional) extra command line arguments to pass to the easyant process" default="" />
        <attribute name="success" description="(optional) indicates whether the process is expected to end successfully" default="true" />
        <element name="args" description="(optional) nested &lt;arg&gt; elements are passed to the easyant process" implicit="true" optional="true" />
        <sequential>

            <fail message="Missing development version of EasyAnt in @{home}.  Do you need to run 'easyant dist'?">
                <condition>
                    <not><available file="@{home}"/></not>
                </condition>
            </fail>

            <exec dir="@{dir}" executable="@{home}/bin/easyant" vmlauncher="false" failonerror="false"
                      resultproperty="easyant-test.exit.code" outputproperty="easyant-test.stdout" errorproperty="easyant-test.stderr">
                <env key="EASYANT_HOME" value="@{home}"/>
                <arg line="@{args}" />
                <args />
                <arg line="@{target}" />
            </exec>

            <echo level="verbose">${easyant-test.stdout}</echo>

            <fail message="Easyant exited status ${easyant-test.exit.code}, process output: ${easyant-test.stderr}">
                 <condition>
                     <xor>
                        <equals arg1="${easyant-test.exit.code}" arg2="0" />
                        <istrue value="@{success}"/>
                     </xor>
                 </condition>
            </fail>

        </sequential>
    </macrodef>

</project>
